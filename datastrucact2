import java.util.*;

public class LabExercise2 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // ======= HashSet Section =======
        System.out.println("=== HashSet ===");
        HashSet<String> courses = new HashSet<>();

        // Example course codes
        courses.add("CS101");
        courses.add("IT202");
        courses.add("MATH201");
        courses.add("ENG105");

        // Display all courses
        System.out.println("Courses: " + courses);

        // Search for a course
        String courseSearch = "IT202";
        System.out.println("\nSearch course: " + courseSearch);
        if (courses.contains(courseSearch)) {
            System.out.println(courseSearch + " is available.");
        } else {
            System.out.println(courseSearch + " not found.");
        }

        // Remove a course
        String courseRemove = "ENG105";
        System.out.println("Remove course: " + courseRemove);
        courses.remove(courseRemove);
        System.out.println("Courses after removal: " + courses);

        // ======= HashMap Section =======
        System.out.println("\n=== HashMap ===");
        HashMap<String, Integer> grades = new HashMap<>();

        // Example student data
        grades.put("Alice", 85);
        grades.put("Bob", 90);
        grades.put("Charlie", 78);

        // Display all grades
        System.out.println("Grades: " + grades);

        // Retrieve grade for one student
        String searchName = "Bob";
        System.out.println("\nSearch student: " + searchName);
        System.out.println(searchName + "'s grade: " + grades.get(searchName));

        // Update grade for one student
        String updateName = "Alice";
        int newGrade = 88;
        System.out.println("Update student: " + updateName);
        System.out.println("New grade: " + newGrade);
        grades.put(updateName, newGrade);
        System.out.println("Grades after update: " + grades);

        // Remove one student
        String removeName = "Charlie";
        System.out.println("Remove student: " + removeName);
        grades.remove(removeName);
        System.out.println("Grades after removal: " + grades);

        sc.close();
    }
}
